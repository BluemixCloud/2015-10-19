<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IBM CA 101 | Cars</title>
    <link rel="stylesheet" href="/foundation/css/foundation.css" />
    <script src="/foundation/js/vendor/modernizr.js"></script>
    <link rel="icon" type="image/png" href="/images/favicon.ico">
  </head>
  <body>
    <div class="row">
      <div class="large-12 columns">
        <h1>CA 101 : Cars</h1>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <h4>Navigation</h4>
        <ul>
          <li><a href="/">Home</a></li>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="large-3 columns">
        <form method="post" action="/cars">
          <select name="property">
            <option>id</option>
            <option>color</option>
            <option>make</option>
            <option>model</option>
            <option>year</option>
          </select>
          <input type="text" name="value" placeholder="value" />
          <input type="text" name="size" placeholder="size" />
          <button type="submit">Fetch Cars</button>
        </form>
      </div>
      <div class="large-9 columns">
        <h3>Url</h3>
        <div>
          <a href="<%= locals.url %>"><%= locals.url %></a>
        </div>
        <h3>Result</h3>
        <% if(locals.rows) { %>
          <% for(var i = 0; i < locals.rows.length; i++) { %>
            <ul>
              <li><%= locals.rows[i].year %></li>
              <li><%= locals.rows[i].make %></li>
              <li><%= locals.rows[i].model %></li>
              <li><%= locals.rows[i].color %></li>
            </ul>
          <% } %>
        <% } %>
      </div>
    </div>

    <script src="/foundation/js/vendor/jquery.js"></script>
    <script src="/foundation/js/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>
